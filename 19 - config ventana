# esto es en la sesiÃ³n de usuario solamente
mkdir ~/bin

touch ~/bin/dwm_status.sh

echo "#!/bin/bash

while true; do
    # 1. Obtenemos la fecha y hora
    DATETIME=$(date "+%a %b %d %H:%M:%S")

    # 2. Otros datos (opcional, ejemplo de baterÃ­a)
    # BATT=$(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null)%

    # 3. Usamos xsetroot para actualizar la barra (IMPORTANTE)
    xsetroot -name " ðŸ’» Gentoo DWM | ${DATETIME} "

    # 4. Esperamos 1 segundo antes de repetir
    sleep 1
done" >> ~/bin/dwm_status.sh

echo "/home/frxn/bin/dwm_status.sh & 
exec dwm" >> ~/.xinitrc

chmod +x ~/bin/dwm_status.sh